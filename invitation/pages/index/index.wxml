<!--pages/index/index.wxml-->
<view class="player player-{{isPlayingMusic?'play':'pause'}}" bindtap="play">
  <image src="/images/music_icon.png" />
  <image src="/images/music_play.png" />
</view>
<!-- 背景图片 -->
<image class="bg" src="/images/bg_1.png"></image>
<!-- 内容区域 -->
<view class="content">
  <image class="content-gif" src="/images/save_the_date.gif"></image>
  <!-- 标题 -->
  <view class="content-title">邀请函</view>
  <!-- 新郎与新娘的合照 -->
  <view class="content-avatar">
    <image src="/images/avatar.png" />
  </view>
  <!-- 新娘和新娘的名字 -->
  <view class="content-info">
    <view class="content-name" bindtap="callGroom">
      <image src="/images/tel.png" />
      <view>王辉辉</view>
      <view>新郎</view>
    </view>
    <view class="content-wedding">
      <image src="/images/wedding.png"></image>
    </view>
    <view class="content-name" bindtap="callBridge">
      <image src="/images/tel.png" />
      <view>张玲玲</view>
      <view>新娘</view>
    </view>
  </view>
  <!-- 婚礼信息 -->
  <view class="content-address">
    <view>我们邀请您来参加我们的婚礼</view>
    <view>时间： 2021年10月12日</view>
    <view>地点：北京海淀区xx路xx酒店</view>
  </view>
</view>